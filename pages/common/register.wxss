/* pages/common/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF); /* 渐变背景 */
  padding: 40rpx;
}

.form-container {
  width: 80%;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1); /* 卡片阴影 */
  animation: fadeIn 0.5s ease-in-out;
}

.title {
  font-size: 48rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: bold;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.role-section {
  margin-bottom: 40rpx;
}

.role-group {
  display: flex;
  justify-content: space-around;
}

.role-item {
  background: #F0F0F0;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.input {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.code-row {
  display: flex;
  margin-bottom: 20rpx;
}

.code-input {
  flex: 1;
  margin-right: 20rpx;
}

.code-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 24rpx;
  width: 200rpx;
}

.upload-section {
  margin-bottom: 40rpx;
}

.upload-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.upload-status {
  font-size: 24rpx;
  color: #666666;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  transition: transform 0.2s;
}

.submit-btn:hover {
  transform: scale(1.05);
}

.login-link {
  text-align: center;
  color: #4A90E2;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 渐入动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}