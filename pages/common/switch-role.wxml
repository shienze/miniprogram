<!--pages/common/switch-role.wxml-->
<view class="container">
  <view class="form-container">
    <text class="title">切换角色</text>
    
    <view class="role-section">
      <text class="section-title">选择新角色</text>
      <radio-group class="role-group" bindchange="handleRoleChange">
        <label class="role-item">
          <radio value="user" checked="{{role === 'user'}}" /> 学生/求职者
        </label>
        <label class="role-item">
          <radio value="enterprise" checked="{{role === 'enterprise'}}" /> 企业/机构
        </label>
      </radio-group>
    </view>
    
    <button class="submit-btn" bindtap="switchRole">确认切换</button>
    
    <!-- 返回链接 -->
    <text class="back-link" bindtap="goBack">返回</text>
  </view>
  
  <!-- 加载动画 -->
  <loading hidden="{{!loading}}">切换中...</loading>
</view>