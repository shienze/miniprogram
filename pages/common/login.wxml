<view class="container">
  <view class="form-container">
    <text class="title">登录</text>
    
    <!-- 角色选择 -->
    <view class="role-section">
      <text class="section-title">选择您的角色</text>
      <radio-group class="role-group" bindchange="handleRoleChange">
        <label class="role-item">
          <radio value="user" checked="{{role === 'user'}}" color="#07c160" /> 学生/求职者
        </label>
        <label class="role-item">
          <radio value="enterprise" checked="{{role === 'enterprise'}}" color="#07c160" /> 企业/机构
        </label>
      </radio-group>
    </view>
 
    <view class="login-section">
      <button 
        class="login-btn"
        bindtap="handleLogin"
        loading="{{loading}}"
      >
        {{loading ? '登录中...' : '微信一键登录'}}
      </button>

      <!-- 注册链接 -->
      <view class="register-container">
        <text class="register-link" bindtap="toRegister">没有账号？立即注册</text>
      </view>
    </view>
  </view>
  
  <!-- 使用 wx.showLoading 代替，这个可以删除 -->
  <!-- <loading hidden="{{!loading}}">登录中...</loading> -->
</view>