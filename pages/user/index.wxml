<view class="container">
  <!-- 轮播banner -->
  <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="500">
    <swiper-item wx:for="{{banners}}" wx:key="index">
      <image src="{{item.url}}" mode="aspectFill" />
    </swiper-item>
  </swiper>
  
  <!-- 搜索入口 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索职位/公司" bindinput="inputSearch" value="{{searchKeyword}}" />
    <button class="search-btn" bindtap="doSearch">搜索</button>
  </view>
  
  <!-- 实习专区 -->
  <view class="intern-entry" bindtap="toInternMatch">
    <text class="intern-title">实习专区</text>
    <text class="more-link">查看更多 ></text>
  </view>

  <!-- 推荐职位列表 -->
  <view class="job-section">
    <text class="section-title">职位推荐</text>
    <scroll-view class="job-list" scroll-y="true" bindscrolltolower="loadMore">
      <view class="job-item" wx:for="{{jobs}}" wx:key="_id" bindtap="toJobDetail" data-id="{{item._id}}">
        <view class="job-title">{{item.title}}</view>
        <view class="job-info">
          <text>公司: {{item.enterpriseInfo.name}}</text>
          <text>薪资: {{item.salary}}</text>
          <text>地点: {{item.location.city}} {{item.location.district}}</text>
        </view>
        <view class="job-type">职位类型: {{item.jobType}}</view>
        <view class="cert-requirements">证书要求: {{item.certificates}}</view>
        <text class="major-requirements">专业要求: {{item.majorRequirements.category}} - {{item.majorRequirements.name}}</text>
      </view>
      <view wx:if="{{loadingMore}}" class="loading">加载中...</view>
    </scroll-view>
  </view>
</view>