.container {
  padding: 40rpx;
}

.video {
  width: 100%;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

