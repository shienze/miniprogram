<!--pages/user/profile-edit.wxml-->
<view class="container">
  <form bindsubmit="saveProfile">
    <view class="section">
      <text class="section-title" style="position: relative; left: 0rpx; top: 185rpx">姓名</text>
      <input style="position: relative; left: 0rpx; top: 229rpx" class="input" name="name" placeholder="请输入姓名" value="{{user.name}}" />
    </view>
    
    <view class="section">
      <text class="section-title" style="position: relative; left: 0rpx; top: 225rpx">学校</text>
      <input style="position: relative; left: 0rpx; top: 270rpx" class="input" name="school" placeholder="请输入学校" value="{{user.school}}" />
    </view>
    
    <view class="section">
      <text class="section-title" style="position: relative; left: 0rpx; top: 262rpx">专业</text>
      <input style="position: relative; left: 0rpx; top: 300rpx" class="input" name="major" placeholder="请输入专业" value="{{user.major}}" />
    </view>
    
    <view class="section">
      <text class="section-title" style="position: relative; left: 0rpx; top: 287rpx">年级</text>
      <input style="position: relative; left: 0rpx; top: 325rpx" class="input" name="grade" placeholder="如大四" value="{{user.grade}}" />
    </view>
    
    <view class="section">
      <text class="section-title" style="position: relative; left: 0rpx; top: 299rpx">上传头像</text>
      <button class="upload-btn" bindtap="uploadAvatar" style="position: relative; left: 0rpx; top: 345rpx">选择图片</button>
      <image wx:if="{{user.avatar}}" class="preview" src="{{user.avatar}}" mode="aspectFill" />
    </view>
    
    <button class="submit-btn" formType="submit" style="position: relative; left: -1rpx; top: 325rpx">保存</button>
  </form>
  
  <loading hidden="{{!loading}}">保存中...</loading>
</view>