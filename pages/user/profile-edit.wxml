<!--pages/user/profile-edit.wxml-->
<view class="container">
  <form bindsubmit="saveProfile">
    <view class="section">
      <text class="section-title">姓名</text>
      <input class="input" name="name" placeholder="请输入姓名" value="{{user.name}}" />
    </view>
    
    <view class="section">
      <text class="section-title">学校</text>
      <input class="input" name="school" placeholder="请输入学校" value="{{user.school}}" />
    </view>
    
    <view class="section">
      <text class="section-title">专业</text>
      <input class="input" name="major" placeholder="请输入专业" value="{{user.major}}" />
    </view>
    
    <view class="section">
      <text class="section-title">年级</text>
      <input class="input" name="grade" placeholder="如大三" value="{{user.grade}}" />
    </view>
    
    <view class="section">
      <text class="section-title">上传头像</text>
      <button class="upload-btn" bindtap="uploadAvatar">选择图片</button>
      <image wx:if="{{user.avatar}}" class="preview" src="{{user.avatar}}" mode="aspectFill" />
    </view>
    
    <button class="submit-btn" formType="submit">保存</button>
  </form>
  
  <loading hidden="{{!loading}}">保存中...</loading>
</view>