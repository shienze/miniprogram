/* pages/user/resume-preview.wxss */
.container {
  background: #FFFFFF;
  padding: 20rpx;
  min-height: 100vh;
}

.preview-header {
  background: #4A90E2;
  color: #FFFFFF;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx 10rpx 0 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.preview-content {
  height: calc(100vh - 200rpx);
  background: #F0F0F0;
  padding: 20rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.resume-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.attachment {
  margin-top: 20rpx;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.action-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 200rpx;
}