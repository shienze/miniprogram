/* pages/user/skill-growth.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.question {
  margin-bottom: 40rpx;
}

.question text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
  display: block;
}

.picker-value {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.result {
  margin-top: 40rpx;
  background: #F0F0F0;
  padding: 20rpx;
  border-radius: 10rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.course-list, .cert-list {
  height: 600rpx;
}

.course-item, .cert-item {
  background: #F8F9FA;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.course-title, .cert-title {
  font-size: 32rpx;
  font-weight: bold;
}

.course-info, .cert-info {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

progress {
  margin-top: 10rpx;
  width: 100%;
}