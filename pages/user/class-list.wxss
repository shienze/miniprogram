/* pages/user/class-list.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.filter-item {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  flex: 1;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.filter-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.class-list {
  height: calc(100vh - 300rpx);
}

.class-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.class-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.class-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.class-preview {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.join-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.joined {
  font-size: 28rpx;
  color: #15803D;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  padding: 40rpx;
}

.recommend-section {
  margin-bottom: 40rpx;
}