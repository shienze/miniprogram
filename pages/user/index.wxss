.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF); /* 渐变背景 */
  padding: 20rpx;
  min-height: 100vh;
}

.banner {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.search-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 10rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.job-list {
  height: calc(100vh - 400rpx); /* 适应屏幕 */
}

.job-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.job-item:hover {
  transform: scale(1.02);
}

.job-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.job-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.job-type {
  font-size: 24rpx;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.cert-requirements {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.major-requirements {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}