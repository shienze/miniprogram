/* pages/user/job-search.wxss */
.container {
  background: #FFFFFF;
  padding: 20rpx;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  background: #F0F0F0;
  border-radius: 50rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-btn, .sort-select {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.job-list {
  height: auto; 
  min-height: 500rpx; 
}

.job-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.job-item:hover {
  transform: scale(1.02);
}

.job-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.job-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}

.filter-content {
  padding: 20rpx;
}

.filter-item {
  margin-bottom: 20rpx;
}

.filter-item text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

checkbox-group label {
  display: block;
  margin-bottom: 10rpx;
}