/* pages/user/lesson-detail.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.cert-tip {
  font-size: 24rpx;
  color: #15803D;
  background: #BBF7D0;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.video-player {
  width: 100%;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.document {
  background: #F0F0F0;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #333333;
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.textarea {
  height: 200rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.upload-btn, .save-btn, .submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.upload-status {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.feedback-section {
  margin-top: 40rpx;
}

.input {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.feedback-list {
  margin-top: 20rpx;
}

.feedback-item {
  background: #F0F0F0;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.feedback-author {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.feedback-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.feedback-time {
  font-size: 24rpx;
  color: #999999;
}