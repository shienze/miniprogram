/* pages/user/profile.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  min-height: 100vh;
  padding: 40rpx;
}
.profile-header {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}
.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-right: 20px; 
}

.change-avatar-btn {
  background-color: #4A90E2;
  color: white;
  font-size: 14px;
  padding: 5px 10px;
  border-radius: 5px;
}
.name {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.edit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  margin-top: 20rpx;
}
.menu-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
  /* hover 不生效可用 active-class 代替 */
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-text {
  font-size: 32rpx;
  color: #333333;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
}
.logout .menu-text {
  color: #EF4444;
}
