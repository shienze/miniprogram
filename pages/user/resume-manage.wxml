<view class="container">
  <button class="upload-btn" bindtap="uploadResume">一键上传简历（Word/PDF）</button>
  <view wx:if="{{fileName}}" class="file-info" bindtap="previewResume">已上传: {{fileName}}（点击预览）</view>

  <view class="section">
    <text class="tip">方便HR快速预览经历</text>
    
    <view class="form-group">
      <text class="label">教育经历</text>
      <textarea class="textarea" value="{{education}}" bindinput="inputEducation" placeholder="请输入教育经历（可选）" />
    </view>
    
    <view class="form-group">
      <text class="label">工作经验</text>
      <textarea class="textarea" value="{{workExperience}}" bindinput="inputWorkExperience" placeholder="请输入工作经验（可选）" />
    </view>
    
    <view class="form-group">
      <text class="label">获得证书</text>
      <textarea class="textarea" value="{{certificates}}" bindinput="inputCertificates" placeholder="请输入获得证书（可选）" />
    </view>
    
    <view class="form-group">
      <text class="label">其他技能特长</text>
      <textarea class="textarea" value="{{skills}}" bindinput="inputSkills" placeholder="请输入其他技能特长（可选）" />
    </view>
  </view>
  
  <button class="submit-btn" bindtap="saveResume" disabled="{{loading}}">{{loading ? '保存中...' : '保存'}}</button>
</view>