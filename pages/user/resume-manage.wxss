/* pages/user/resume-manage.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input, .textarea {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #FFFFFF;
}

.textarea {
  height: 200rpx;
}

.upload-section {
  margin-bottom: 40rpx;
}

.upload-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.upload-status {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.action-btn {
  background: #EAF4FF;
  color: #4A90E2;
  border-radius: 50rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
}

.suggestion {
  background: #F0F0F0;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}