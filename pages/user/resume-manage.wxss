.container {
  padding: 30px 20px; /* 增加 padding */
  background-color: #f8f8f8;
  min-height: 100vh;
}

.upload-btn {
  background-color: #07c160;
  color: #ffffff;
  font-size: 16px;
  height: 48px;
  line-height: 48px;
  border-radius: 4px;
  margin-bottom: 20px;
}

.file-info {
  font-size: 14px;
  color: #07c160; /* 绿链接色 */
  margin-bottom: 30px; /* 增加间距 */
  display: block;
  text-decoration: underline; /* 像链接 */
}

.section {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 20px; /* 增加内部 padding */
  margin-bottom: 30px; /* 增加底部间距 */
}

.tip {
  font-size: 14px;
  color: #999999;
  margin-bottom: 20px; /* 增加间距 */
  display: block;
}

.form-group {
  margin-bottom: 30px; /* 增加组间距 */
}

.label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 10px; /* 增加标签间距 */
  display: block;
}

.textarea {
  width: 100%;
  height: 150px; /* 增加高度，更宽敞 */
  border: 1px solid #dddddd;
  border-radius: 4px;
  padding: 10px; /* 增加内部 padding */
  font-size: 14px;
  box-sizing: border-box;
}

.submit-btn {
  background-color: #07c160;
  color: #ffffff;
  font-size: 16px;
  height: 48px;
  line-height: 48px;
  border-radius: 4px;
  margin-top: 30px; /* 增加顶部间距 */
}