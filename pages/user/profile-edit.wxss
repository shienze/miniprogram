/* pages/user/profile-edit.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  min-height: 100vh;
  padding: 40rpx;
}
  .section {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 20px;
  }
  .form-group {
  margin-bottom: 24px;
  }
  .label {
  font-size: 14px;
  color: #333333;
  margin-bottom: 8px;
  display: block;
  }
  .input {
  width: 100%;
  height: 40px;
  border: 1px solid #dddddd;
  border-radius: 4px;
  padding: 0 12px;
  font-size: 14px;
  box-sizing: border-box;
  }
  .input-wrapper {
  position: relative;
  }
  .clear-btn {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 18px;
  color: #999999;
  padding: 4px;
  }
  .dropdown-list {
  max-height: 200px;
  overflow-y: auto;
  background-color: #ffffff;
  border: 1px solid #dddddd;
  border-radius: 4px;
  margin-top: 4px;
  position: absolute;
  width: 100%;
  z-index: 10;
  }
  .dropdown-item {
  padding: 12px;
  font-size: 14px;
  border-bottom: 1px solid #eeeeee;
  }
  .dropdown-item:last-child {
  border-bottom: none;
  }
  .no-result {
  padding: 12px;
  font-size: 14px;
  color: #999999;
  text-align: center;
  }
  .sub-group {
  margin-top: 16px;
  }
  .sub-label {
  font-size: 13px;
  color: #666666;
  margin-bottom: 4px;
  display: block;
  }
  .picker-value {
  height: 40px;
  line-height: 40px;
  border: 1px solid #dddddd;
  border-radius: 4px;
  padding: 0 12px;
  font-size: 14px;
  background-color: #ffffff;
  }
  .submit-btn {
  background-color: #07c160;
  color: #ffffff;
  font-size: 16px;
  height: 48px;
  line-height: 48px;
  border-radius: 4px;
  margin-top: 20px;
  }