/* pages/user/profile-edit.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 50rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.input {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  background: #FFFFFF;
  font-size: 28rpx;
}

.upload-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  transition: transform 0.2s;
}

.submit-btn:hover {
  transform: scale(1.05);
}