<view class="container">
  <view class="header">
    <text class="title">{{job.title}}</text>
    <text class="status">{{job.status}}</text>
    <view class="enterprise-info">
      <text class="company-name">企业：{{job.enterpriseInfo.company}}</text>
    </view>
    <text class="job-type">职位类型: {{job.jobType}}</text>
    <text class="salary">薪资: {{job.salary}}</text>
    <text class="location">地点: {{job.location.province}} {{job.location.city}} {{job.location.district}}</text>
    <text class="certificates">证书要求: {{job.certificates.join(', ')}}</text>
    <text class="major-requirements">专业要求: {{job.majorRequirements.category}} - {{job.majorRequirements.name}}</text>
  </view>
  
  <view class="section description">
    <text class="section-title">职位描述</text>
    <rich-text nodes="{{job.description}}" />
  </view>
  
  <view class="section requirements">
    <text class="section-title">任职要求</text>
    <rich-text nodes="{{job.requirements}}" />
  </view>
  
  <view class="action-bar">
    <button class="action-btn" open-type="share">分享</button>
    <button class="action-btn" bindtap="startChat">聊天</button>
    <button class="apply-btn" bindtap="applyJob" disabled="{{applied}}">{{ applied ? '已投递' : '一键投递' }}</button>
  </view>
  
  <loading hidden="{{!loading}}">加载中...</loading>
</view>