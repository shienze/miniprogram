/* pages/user/post-detail.wxss */
.container {
  background: #F8F9FA;
  padding: 20rpx;
  min-height: 100vh;
}

.post-content {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

.post-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.post-body {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.tag {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.post-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.action-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.comment-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.comment-list {
  margin-bottom: 40rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-info {
  flex: 1;
}

.comment-author {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.comment-text {
  font-size: 28rpx;
  color: #666666;
  margin: 10rpx 0;
}

.comment-time {
  font-size: 24rpx;
  color: #999999;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}

.comment-input {
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-right: 20rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}