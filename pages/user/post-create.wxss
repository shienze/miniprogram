/* pages/user/post-create.wxss */
.container {
  background: #FFFFFF;
  padding: 40rpx;
  min-height: 100vh;
}

.title-input {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #DDDDDD;
  padding-bottom: 20rpx;
}

.textarea {
  height: 400rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.tag-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.tag-input {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.upload-section {
  margin-bottom: 40rpx;
}

.upload-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.upload-status {
  font-size: 24rpx;
  color: #666666;
  margin-top: 20rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
}