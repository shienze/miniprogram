/* pages/user/intern-match.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.banner {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.search-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.filter-bar {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.filter-item {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  flex: 1;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.filter-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.intern-list {
  height: calc(100vh - 600rpx);
}

.intern-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.intern-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.intern-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.intern-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.apply-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  padding: 40rpx;
}