/* pages/user/job-detail.wxss */
.container {
  background: #FFFFFF;
  padding: 20rpx;
  min-height: 100vh;
}

.job-header {
  background: linear-gradient(to right, #4A90E2, #357ABD);
  color: #FFFFFF;
  padding: 40rpx 20rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.job-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.job-meta {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.job-content {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
}

rich-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.action-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 20rpx;
  box-shadow: 0 -4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  background: #EAF4FF;
  color: #4A90E2;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.apply-btn {
  flex: 2;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
}