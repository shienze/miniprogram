.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.header {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status {
  font-size: 28rpx;
  color: #15803D;
  background: #BBF7D0;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}

.enterprise-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.contact, .email, .nickname {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 5rpx;
}

.job-type {
  font-size: 28rpx;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.salary {
  font-size: 28rpx;
  color: #EF4444;
  margin-bottom: 10rpx;
}

.location {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.certificates {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.major-requirements {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

rich-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  box-shadow: 0 -4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  background: #EAF4FF;
  color: #4A90E2;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  flex: 1;
  margin-right: 20rpx;
}

.apply-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  flex: 2;
  margin-right: 0;
}

.loading {
  text-align: center;
  font-size: 32rpx;
  color: #999999;
  padding: 80rpx;
}