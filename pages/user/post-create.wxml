<!-- pages/user/post-create.wxml -->
<view class="container">
  <input class="input title-input" placeholder="帖子标题" bindinput="inputTitle" value="{{title}}" />
  
  <textarea class="textarea" placeholder="帖子内容" bindinput="inputContent" value="{{content}}" />
  
  <view class="tag-section">
    <text class="section-title">添加标签</text>
    <input class="input tag-input" placeholder="输入标签，按回车添加" bindconfirm="addTag" value="{{tagInput}}" />
    <view class="tags">
      <text class="tag" wx:for="{{tags}}" wx:key="index" bindtap="removeTag" data-index="{{index}}">{{item}} ×</text>
    </view>
  </view>
  
  <view class="upload-section">
    <text class="section-title">上传附件（可选）</text>
    <button class="upload-btn" bindtap="uploadAttachment">选择文件</button>
    <text wx:if="{{attachmentPath}}" class="upload-status">已选择: {{attachmentName}}</text>
  </view>
  
  <button class="submit-btn" bindtap="submitPost">发布</button>
</view>