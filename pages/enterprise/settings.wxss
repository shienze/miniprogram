/* pages/enterprise/settings.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.menu-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  color: #333333;
}

.logout {
  background: #FFF5F5;
}

.logout-text {
  color: #EF4444;
}