/* pages/enterprise/class-manage.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 150rpx;
}

.class-list {
  height: calc(100vh - 200rpx);
}

.class-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.class-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.class-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.class-preview {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.class-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}

.active {
  background: #BBF7D0;
  color: #15803D;
}

.inactive {
  background: #FECACA;
  color: #B91C1C;
}

.actions {
  display: flex;
  justify-content: space-between;
}

.edit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 200rpx;
}

.delete-btn {
  background: #EF4444;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 200rpx;
}

.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  font-size: 48rpx;
  box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.3);
}

.modal-input, .modal-textarea {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.modal-picker {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  text-align: center;
}

.modal-textarea {
  height: 200rpx;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  padding: 40rpx;
}