/* pages/enterprise/index.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  min-height: 100vh;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  color: #333333;
  font-weight: bold;
}

.subtitle {
  font-size: 32rpx;
  color: #666666;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 两列 */
  grid-gap: 40rpx;
  width: 100%;
}

.grid-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s;
}

.grid-item:hover {
  transform: scale(1.05);
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}