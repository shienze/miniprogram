/* pages/enterprise/index.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2 0%, #FFFFFF 30%);
  padding: 20rpx;
  min-height: 100vh;
}

.overview {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  color: #4A90E2;
  font-weight: bold;
}

.stat-label {
  font-size: 28rpx;
  color: #666666;
}

.job-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.job-list {
  height: calc(100vh - 400rpx);
}

.job-item {
  border-bottom: 1rpx solid #F0F0F0;
  padding: 20rpx 0;
}

.job-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.job-status {
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.active {
  background: #BBF7D0;
  color: #15803D;
}

.inactive {
  background: #FECACA;
  color: #B91C1C;
}

.job-info {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}

.loading {
  text-align: center;
  color: #999999;
  padding: 20rpx;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background: #4A90E2;
  color: #FFFFFF;
  font-size: 48rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.3);
}