<!--pages/enterprise/data-analysis.wxml-->
<view class="container">
  <view class="section">
    <text class="section-title">招聘概览</text>
    <view class="overview">
      <text>总投递量: {{overview.applyCount}}</text>
      <text>总查看率: {{overview.viewRate}}%</text>
    </view>
  </view>
  
  <view class="section">
    <text class="section-title">职位投递详情</text>
    <table class="data-table">
      <tr>
        <th>职位</th>
        <th>投递量</th>
        <th>查看率</th>
      </tr>
      <tr wx:for="{{jobStats}}" wx:key="id">
        <td>{{item.title}}</td>
        <td>{{item.applies}}</td>
        <td>{{item.views}}%</td>
      </tr>
    </table>
  </view>
  
  <view class="section">
    <text class="section-title">学校分布</text>
    <view class="distribution">
      <text wx:for="{{schoolDist}}" wx:key="school">{{item.school}}: {{item.count}}人</text>
    </view>
  </view>
</view>