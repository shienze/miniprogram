/* pages/enterprise/job-manage.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.job-list {
  height: calc(100vh - 80rpx);
}

.job-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.active {
  background: #BBF7D0;
  color: #15803D;
}

.inactive {
  background: #FECACA;
  color: #B91C1C;
}

.salary {
  font-size: 28rpx;
  color: #EF4444;
  margin-bottom: 10rpx;
}

.location {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.job-type {
  font-size: 28rpx;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.certificates {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.major-requirements {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.description, .requirements {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.actions {
  display: flex;
  justify-content: space-between;
}

.edit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 200rpx;
}

.down-btn {
  background: #EF4444;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 200rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 32rpx;
  padding: 80rpx;
}

.loading {
  text-align: center;
  color: #999999;
  font-size: 32rpx;
  padding: 80rpx;
}