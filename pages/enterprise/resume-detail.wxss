/* pages/enterprise/resume-detail.wxss */
.container {
  padding: 20rpx;
}

.resume-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
}

.info {
  font-size: 28rpx;
  color: #666666;
}

rich-text {
  background: #F0F0F0;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.action-bar {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}