/* pages/enterprise/resume-detail.wxss */
.page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f7f7f8;
}

.topbar {
  display: flex;
  align-items: center;
  padding: 12px;
  background: #ffffff;
  box-shadow: 0 1px 0 rgba(0,0,0,0.04);
}

.back-btn {
  margin-left: 12px;
  padding: 6px 10px;
}

.title {
  font-size: 18px;
  font-weight: 600;
}

.content {
  flex: 1;
  padding: 12px;
}

.card {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 12px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.03);
}

.basic .name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 18px;
  font-weight: bold;
}

.job-title {
  font-size: 14px;
  color: #666;
}

.meta {
  margin-top: 6px;
  display: flex;
  gap: 16px;
  color: #444;
  font-size: 13px;
}

.resume-file .file-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-note {
  margin-top: 8px;
  color: #888;
  font-size: 13px;
}

.section-title {
  font-weight: 600;
  margin-bottom: 6px;
}

.apply-info {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 13px;
}

.footer {
  display: flex;
  padding: 10px;
  gap: 8px;
  background: #fff;
  border-top: 1px solid #eee;
}

.footer button {
  flex: 1;
  height: 44px;
  border-radius: 8px;
  font-weight: 600;
}

.chat-btn {
  background: #fff;
  border: 1px solid #ddd;
}

.reject-btn {
  background: #fff;
  border: 1px solid #ddd;
}
