/* pages/enterprise/class-detail-manage.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.header {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.class-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.class-info {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.preview-textarea {
  height: 200rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.save-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.textarea {
  height: 300rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.member-list {
  height: 600rpx;
}

.member-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
}

.member-info {
  font-size: 24rpx;
  color: #666666;
  margin-left: 20rpx;
}

.member-actions {
  display: flex;
  flex-direction: column;
  margin-left: auto;
}

.approve-btn {
  background: #10B981;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  width: 150rpx;
}

.remove-btn {
  background: #EF4444;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 24rpx;
  width: 150rpx;
}

.action-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.stat-list {
  font-size: 28rpx;
  color: #666666;
}

.stat-list text {
  display: block;
  margin-bottom: 10rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}