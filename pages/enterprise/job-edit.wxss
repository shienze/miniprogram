/* pages/enterprise/job-edit.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.input, .textarea {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #FFFFFF;
}

.textarea {
  height: 200rpx;
}

.skills-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.skill-input {
  margin-bottom: 20rpx;
}

.skills {
  display: flex;
  flex-wrap: wrap;
}

.skill-tag {
  background: #EAF4FF;
  color: #4A90E2;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  margin-bottom: 20rpx;
}

.down-btn {
  background: #EF4444;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(239, 68, 68, 0.3);
}