/* pages/enterprise/resume-filter.wxss */
.container {
  padding: 12px;
  background-color: #f5f7fa;
  height: 100%;
}

.filters {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 10px;
}

.filter-item {
  position: relative;
}

.filter-item input {
  width: 100%;
  padding: 8px 10px;
  border-radius: 6px;
  border: 1px solid #e0e6ef;
  background: #fff;
}

.clear-btn {
  position: absolute;
  right: 6px;
  top: 6px;
}

.suggest-list {
  background: #fff;
  border: 1px solid #e6eef8;
  border-radius: 6px;
  max-height: 160px;
  overflow-y: auto;
  margin-top: 6px;
}

.suggest-item {
  padding: 8px;
  border-bottom: 1px solid #f0f5fb;
}

.list {
  margin-top: 6px;
}

.card {
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 10px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.04);
}

.card-left {
  flex: 1;
}

.job-title {
  font-weight: bold;
  font-size: 16px;
  display: block;
  margin-bottom: 6px;
}

.applicant, .school, .major, .time, .status {
  display: block;
  font-size: 13px;
  color: #444;
  margin-top: 4px;
}

.card-right {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-left: 10px;
  align-items: flex-end;
}

.view-btn {
  padding: 6px 10px;
  border-radius: 6px;
  background: #2d8cf0;
  color: #fff;
}

.reject-btn {
  padding: 6px 10px;
  border-radius: 6px;
  background: #ff4d4f; /* 红色 拒绝 */
  color: #fff;
}

.rejected-btn {
  padding: 6px 10px;
  border-radius: 6px;
  background: #bfbfbf; /* 灰色 */
  color: #fff;
}

.empty {
  text-align: center;
  color: #999;
  padding: 30px 0;
}
