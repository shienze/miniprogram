/* pages/enterprise/resume-filter.wxss */
.container {
  padding: 20rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.resume-list {
  height: calc(100vh - 200rpx);
}

.resume-item {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}

.info {
  font-size: 28rpx;
  color: #666666;
}

.match {
  font-size: 24rpx;
  color: #4A90E2;
}