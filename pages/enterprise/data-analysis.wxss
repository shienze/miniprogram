/* pages/enterprise/data-analysis.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.overview {
  display: flex;
  justify-content: space-around;
  font-size: 28rpx;
  color: #666666;
}

.data-table {
  width: 100%;
  border-collapse: collapse;
}

th, td {
  border: 1rpx solid #DDDDDD;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
}

th {
  background: #F0F0F0;
  font-weight: bold;
}

.distribution {
  font-size: 28rpx;
  color: #666666;
}

.distribution text {
  display: block;
  margin-bottom: 10rpx;
}