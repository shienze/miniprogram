/* pages/enterprise/job-publish.wxss */
.container {
  background: linear-gradient(to bottom, #4A90E2, #FFFFFF);
  padding: 40rpx;
  min-height: 100vh;
}

.form-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.label {
  font-weight: bold;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.sub-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input, .textarea {
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #FFFFFF;
}

.textarea {
  height: 200rpx;
  min-height: 150rpx;
}

.location-item, .major-item {
  margin-bottom: 20rpx;
}

.picker {
  padding: 20rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  margin-bottom: 15rpx;
}

.certificates-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.certificates-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.certificate-item {
  padding: 15rpx 25rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 50rpx;
  font-size: 26rpx;
  background: #f5f5f5;
  transition: all 0.3s;
}

.certificate-item.selected {
  background: #4A90E2;
  color: white;
  border-color: #4A90E2;
}

.selected-certificates {
  margin-top: 20rpx;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 15rpx;
}

.tag {
  display: flex;
  align-items: center;
  background: #EAF4FF;
  color: #4A90E2;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.remove {
  margin-left: 15rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  line-height: 1;
}

.form-submit {
  margin-top: 50rpx;
}

.submit-btn {
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  height: 80rpx;
  line-height: 80rpx;
}

.submit-btn:disabled {
  background: #cccccc;
  box-shadow: none;
}

/* 禁用状态的picker样式 */
picker[disabled] .picker {
  background: #f5f5f5;
  color: #999;
}